@model ML.Usuario
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registros de los usuarios</h2>

<div class="container">

    <div class="row">
        <div class="col-md- offset-11 ">

            @Html.ActionLink(" ", "Formulario", "Usuario", new { @class = "btn btn-success bi bi-person-plus-fill" })

        </div>
    </div>

    @if (Model.Usuarios != null)
    {



        <div class="row">

            <div class="col-md-11">

                <div>

                    <table class="table table-bordered">
                        <thead>
                            <tr>

                                <th>Editar</th>
                                <th class="visually-hidden-focusable">Id</th>
                                <th>Nombre</th>
                                <th>Apellido Paterno</th>
                                <th>Apellido Materno</th>
                                <th>Correo</th>
                                <th>Edad</th>
                                <th>Eliminar</th>
                            </tr>

                        </thead>
                        <tbody>

                            @foreach (ML.Usuario usuario in Model.Usuarios)
                            {
                                <tr>

                                    <td>
                                        <a class="btn btn-warning glyphicon glyphicon-edit bi bi-pencil-square" 
                                           href="@Url.Action("Formulario", "Usuario", new { IdUsuario = usuario.IdUsuario })">

                                        </a>
                                    </td>
                                    <td class="visually-hidden-focusable">@usuario.IdUsuario</td>
                                    <td>@usuario.Nombre</td>
                                    <td>@usuario.Paterno</td>
                                    <td>@usuario.Materno</td>
                                    <td>@usuario.Correo</td>
                                    <td>@usuario.Edad</td>
                                    <td>
                                        <a class="btn btn-danger bi bi-trash" href="@Url.Action("Delete", "Usuario", new {IdUsuario = usuario.IdUsuario })"
                                           onclick="return confirm('Estas seguro de elimidar el registro?');">

                                        </a>
                                    </td>
                                </tr>


                            }

                        </tbody>
                    </table>
                </div>


            </div>

        </div>
    }


</div>
